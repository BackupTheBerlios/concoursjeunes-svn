<?xml version="1.0" encoding="UTF-8"?>
	<project name="ConcoursJeunes.makeappinfos" default="buildgenaratedressources" basedir=".">
		<property file="packager/version.properties" />
		<tstamp>
			<format property="version.date" pattern="dd/MM/yyyy" />
		</tstamp>
   
		<target name ="buildgenaratedressources" description="Construit la class AppInfos">
			<copy file="packager/AppInfos.java.tpl" tofile="src/org/concoursjeunes/AppInfos.java" overwrite="true" />
			<get dest="lib/ajcommons.jar" src="http://ajdeveloppement.org:8080/hudson/job/AjCommons/lastSuccessfulBuild/artifact/trunk/ajcommons.jar"/>
			<get dest="lib/ajcommons-ext.jar" src="http://ajdeveloppement.org:8080/hudson/job/AjCommons/lastSuccessfulBuild/artifact/trunk/ajcommons-ext.jar"/>
			<get dest="lib/ajcommons-swingx-ext.jar" src="http://ajdeveloppement.org:8080/hudson/job/AjCommons%20SwingX%20Ext/lastSuccessfulBuild/artifact/trunk/ajcommons-swingx-ext.jar"/>
			<replace 
			    file="src/org/concoursjeunes/AppInfos.java"
				propertyFile="packager/version.properties"
				encoding="UTF-8" >
				<replacefilter 
				    token="{versionName}" 
				    property="version.name" />
				<replacefilter
				    token="{versionNumero}" 
				    property="version.numero" />
				<replacefilter 
				    token="{versionCodename}" 
				    property="version.codename" />
				<replacefilter 
				    token="{versionAuthor}" 
				    property="version.author" />
				<replacefilter 
				    token="{versionCopyr}" 
				    property="version.copyr" />
			</replace>
			<replace 
				file="src/org/concoursjeunes/AppInfos.java"
				token="{versionDate}" 
				value="${version.date}"
				encoding="UTF-8" /> 
			
			<copy todir="ressources/repositories/" overwrite="true">
				<fileset dir="packager/repositories-template/"/>
			</copy>
			<replace 
				    dir="ressources/repositories/"
					propertyFile="packager/version.properties"
					encoding="UTF-8" >
				<replacefilter 
				    token="{versionNumero}" 
				    property="version.numero" />
				<include name="*.xml"/>
			</replace>
		</target>
</project>