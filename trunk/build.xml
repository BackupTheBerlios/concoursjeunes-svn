    file="configure.sh"
    value="defaultvalue"
    propertyFile="source/name.properties">
  <replacefilter 
    token="@token1@"/>
  <replacefilter 
    token="@token2@" 
    value="value2"/>
  <replacefilter 
    token="@token3@2" 
    property="property.key"/>
</replace>-->

	<target name="windows" 
		depends="jar, exportWinFFTA, pack-ConcoursJeunesUpdate, pack-FFTAImport, revisions" 
		description="Pack Windows" />
	<target name="linux"
		depends="jar, pack-ConcoursJeunesUpdate, revisions, makerpm"
		description="Pack Linux" />
	<target name="MacOSX" 
		description="Pack Mac OS X" />
	<target name="all" depends="dev_doc, packager, makerpm" />
	<target name="all_nodevdoc" depends="packager, makerpm" />

</project>