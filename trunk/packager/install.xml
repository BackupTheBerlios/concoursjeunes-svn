<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>@version.name@</appname>
        <appversion>@version.numero@</appversion>
        <authors>
            <author name="@version.author@" email="aurelien.jeoffray@concoursjeunes.org"/>
        </authors>
        <url>@version.url@</url>
		<javaversion>1.5</javaversion>
		<summarylogfilepath>$INSTALL_PATH/log/Summary.htm</summarylogfilepath>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no">
    	<laf name="looks">
            <os family="unix" />
        </laf>
    </guiprefs>

   <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="true" />
    </variables>
    
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
		<langpack iso3="fra"/>
        <langpack iso3="eng"/>
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="../pack/Readme.txt"/>
		<res src="shortcutSpec.xml" id="shortcutSpec.xml"/>
		<res src="Unix_shortcutSpec.xml" id="Unix_shortcutSpec.xml"/>
		<res src="RegistrySpec.xml" id="RegistrySpec.xml"/>
		<!--<res src="userInputSpec.xml" id="userInputSpec.xml"/>-->
		<res src="langsel.jpg" id="installer.langsel.img"/>
		<res src="border1.png" id="Installer.image.0"/>
        <res src="border2.png" id="Installer.image.1"/>
        <res src="border3.png" id="Installer.image.2"/>
        <res src="border4.png" id="Installer.image.3"/>
        <res src="border5.png" id="Installer.image.4"/>
        <res src="border6.png" id="Installer.image.5"/>
        <res src="border7.png" id="Installer.image.6"/>
        <res src="border8.png" id="Installer.image.7"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
		<panel classname="CheckedHelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
		<panel classname="PacksPanel"/>
        <panel classname="TargetPanel"/> 
		<!--<panel classname="UserInputPanel"/>-->
		<panel classname="SummaryPanel" />
        <panel classname="InstallPanel"/>
		<panel classname="ShortcutPanel"/>
        <panel classname="SimpleFinishPanel"/>
    </panels>

    <!-- The listeners section for CustomActions -->
    <listeners>
        <listener installer="RegistryInstallerListener" uninstaller="RegistryUninstallerListener">
            <os family="windows"/>
        </listener>
		<listener installer="SummaryLoggerInstallerListener" />
    </listeners>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
	<packs>
		<pack name="Base" required="yes">
			<description>Le logiciel ConcoursJeunes ainsi que l'ensemble des ressources nécessaire à son fonctionnement</description>
			<fileset dir="../pack" targetdir="$INSTALL_PATH">
				<include name="*.txt" />
				<include name="*.jar" />
				<include name="*.exe" />
				<include name="*.DLL" />
				<include name="start.sh" />
				<include name="bin/native/**/*" />				<include name="base/**/*" />
				<include name="config/**/*" />
				<include name="lang/**/*" />
				<include name="lib/**/*" />
				<include name="plugins/org/concoursjeunes/ImportPlugin.class" />
				<include name="ressources/**/*" />
				<exclude name="install.jar"/>
				<exclude name="config/*FFTA*"/>
				<exclude name="lang/*FFTA*"/>
			</fileset>
			<executable targetfile="$INSTALL_PATH/start.sh" stage="never" />
			<parsable targetfile="$INSTALL_PATH/start.sh"/>
		</pack>
		<pack name="Plugins" required="no" preselected="yes">
			<description>Les plugins d'import de base de données</description>
			<fileset dir="../pack" targetdir="$INSTALL_PATH">
				<include name="plugins/**/*" />
				<include name="config/FFTA*" />
				<include name="lang/FFTA*" />
				<exclude name="plugins/org/concoursjeunes/ImportPlugin.class" />
			</fileset>
		</pack>
		<pack name="Sources" required="no" preselected="no">
			<description>Les Sources (java) de ConcoursJeunes.</description>
			<file src="../pack/src" targetdir="$INSTALL_PATH/src" />
			<file src="../pack/docs" targetdir="$INSTALL_PATH/docs" />
		</pack>
	</packs>
	
	 <!-- The native libraries to add -->
    <native type="izpack" name="ShellLink.dll">
		<os family="windows"/>
    </native>
    <native type="3rdparty" name="COIOSHelper.dll" stage="both">
        <os family="windows"/>
    </native>
    
</installation>
