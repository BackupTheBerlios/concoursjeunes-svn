<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<userInput>
	 <panel order="0">
	 	<field type="radio" variable="langue">
			<description align="left" txt="Choix de la Langue de L'Application" id="langue.radio"/>
			<spec>
				<choice txt="English" id="radio.label.1" value="en" />
				<choice txt="Français" id="radio.label.2" value="fr" set="true" />
			</spec>
		</field>
		<field type="text" variable="compagnieName">
			<spec txt="Nom de la Compagnie:" id="compagnieName.label" size="20" set=""/>
		</field>
		<field type="text" variable="numAgrement">
			<spec txt="Numero d'Agrément:" id="numAgrement.label" size="7" set=""/>
		</field>
		<field type="search" variable="acrobat">
			<spec txt="Chemin de Acrobat Reader" checkfilename="./AcroRd32.exe"
					type="file" result="directory">
				<choice value="C:\Program Files\Adobe\" os="windows" />
				<choice value="/usr/java/" os="unix" />
				<choice value="/opt/java" os="unix" />
			</spec>
		</field>

		<createForPack name="Base" />
	</panel>
</userInput>