   <shortcut
     name="ConcoursJeunes"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="&quot;$JAVA_HOME\bin\javaw.exe&quot;"
     workingDirectory="$INSTALL_PATH"
     commandLine="-Xmx128m -jar &quot;$INSTALL_PATH\ConcoursJeunes.jar&quot;"
     description="ConcoursJeunes"
     iconFile="$INSTALL_PATH\ressources\iconCJ.ico"
     iconIndex="0"
     initialState="normal">
     
     <createForPack name="Base" />
   </shortcut>

   <shortcut
     name="Log"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\Log"
     workingDirectory="$INSTALL_PATH\Log"
     commandLine=""
     description="ConcoursJeunes Log">
     
     <createForPack name="Base" />
   </shortcut>
   
   <shortcut
     name="Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="&quot;$JAVA_HOME\bin\javaw.exe&quot;"
     commandLine="-jar &quot;$INSTALL_PATH\Uninstaller\uninstaller.jar&quot;"
     description="IzPack uninstaller"
     iconFile="$INSTALL_PATH\ressources\iconCJ.ico"
     iconIndex="0">
     
     <createForPack name="Base" />
   </shortcut>
   
